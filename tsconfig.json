{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist/**/*",
    // TODO: Fix tests!
    "src/**/*.test.ts"
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "allowJs": true,
    "checkJs": true,
    "target": "ES2022",
    "lib": [
      "ES2021",
      "DOM",
    ],
    "allowSyntheticDefaultImports": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strict": true,
    "removeComments": true
  }
}