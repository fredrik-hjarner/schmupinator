{
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "dist/**/*",
    // TODO: Fix tests!
    "src/**/*.test.ts",
    // "jest.config.cjs"
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist/src",
    // "incremental": true, // performance increase. // this seems to cause problems sometimes.
    "allowJs": true,
    "checkJs": true,
    "target": "ESNext",
    "module": "ESNext",
    // "lib": [
    //   "ESNext",
    //   "ES2021",
    //   "DOM",
    // ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strict": true,
    "removeComments": true,
    // "baseUrl": ".", // This must be specified if "paths" is.
    // "paths": {
    //   "yaml": [
    //     "node_modules/yaml"
    //   ] // This mapping is relative to "baseUrl"
    // }
  }
}