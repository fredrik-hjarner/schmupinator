{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist/**/*"
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "allowJs": true,
    "checkJs": true,
    "target": "ES2022",
    "lib": [
      "ES2021",
      "DOM",
    ],
    "allowSyntheticDefaultImports": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitAny": true,
    // "noUncheckedIndexedAccess": true
    "noUnusedLocals": true,
    "strict": true,
  }
}